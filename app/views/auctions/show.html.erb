<h1 class="container text-center">Details</h1>
<div class="container text-center">
  <ul class="card">
    <li class="cl">
      <%= @auction.item %>
      <%= @auction.description %>
      <p>Vendedor: <%= @auction.user.first_name.capitalize %></p>
      <p>Pre√ßo inicial: <%= @auction.initial_price %></p>
      <% if @bid %>
        <%= @bid.price  %>
      <%else%>
          NO BIDS YET!,  BID In+ !
      <% end %>
      <% if @auction.status %>
        <%= link_to "Bid", auction_bids_path(@auction), method: :post, class: "btn" %>
      <%else%>
        <span>Auction CLOSED!</span>
      <% end %>
    </li>
  </ul>

  <%= link_to "Close auction", auction_close_path(@auction), method: :patch, class: "btn" %>
  <%= link_to "Edit Auctions", edit_auction_path(@auction), class: "btn" %>
  <%= link_to "View Auctions", auctions_path, class: "btn" %>
  <%= link_to "Delete", auction_path, method: :delete, data: { confirm: "Your auction has been deleted" }, class: "btn" %>
</div>
